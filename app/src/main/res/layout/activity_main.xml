<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/yellow"
    >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_request"
        android:textColor="@color/black"

        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.204" />




    <EditText
        android:id="@+id/ed_text"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="140dp"
        android:background="@color/white"
        android:hint="@string/input_numbers"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:inputType="number"
        />

    <Button
        android:id="@+id/bt1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="@+id/ed_text"
        app:layout_constraintStart_toStartOf="@+id/ed_text"
        app:layout_constraintTop_toBottomOf="@+id/ed_text"
        android:layout_marginTop="40dp"
        android:text="@string/input"
        android:textSize="22sp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>